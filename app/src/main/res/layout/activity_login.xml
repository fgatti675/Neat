<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.neat.util.AnimatedLogoView
            android:layout_width="360dp"
            android:layout_height="120dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/colorPrimary">

        <Button
            android:background="@color/facebook_blue"
            android:id="@+id/button_facebook_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/facebook_sign_in"
            android:theme="@style/Button.Facebook"
            android:layout_weight="1" />

        <Button
            android:background="@color/google_red"
            android:id="@+id/google_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/google_sign_in"
            android:theme="@style/Button.Google"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
