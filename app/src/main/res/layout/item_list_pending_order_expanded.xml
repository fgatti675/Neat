<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="orderviewmodel"
            type="com.neat.viewmodel.PendingOrderViewModel" />

        <import type="android.view.View" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/order_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(view) -> orderviewmodel.onOrderClick(view)}"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_padding"
        android:paddingEnd="@dimen/large_padding"
        android:paddingStart="@dimen/large_padding"
        android:paddingTop="@dimen/default_padding"
        android:transitionName='@{orderviewmodel.id + "_view"}'
        tools:background="@color/colorPrimary">

        <android.support.constraint.Guideline
            android:id="@+id/title_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="54dp"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:transitionName='@{orderviewmodel.id + "_icon"}'
            app:itemIcon="@{orderviewmodel.icon}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/item_fork" />

        <TextView
            android:id="@+id/order_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tiny_padding"
            android:text='@{"x" + orderviewmodel.count}'
            android:textAppearance="@style/Text.Small.White"
            android:transitionName='@{orderviewmodel.id + "_count"}'
            android:visibility="@{orderviewmodel.count > 1 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/item_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="x2" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/large_padding"
            android:text="@{orderviewmodel.name}"
            android:textAppearance="@style/Text.White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/title_guideline"
            app:layout_constraintRight_toLeftOf="@+id/item_price"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1/3 Mahou" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:text="@{orderviewmodel.formattedPrice}"
            android:textAppearance="@style/Text.Small.White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/remove_button"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2,40â‚¬"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.722" />

        <ImageView
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view) -> orderviewmodel.onOrderRemovedClick(view)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_clear_24dp"
            android:layout_marginBottom="8dp" />

    </android.support.constraint.ConstraintLayout>
</layout>