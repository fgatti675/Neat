<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemViewModel"
            type="com.neat.viewmodel.ItemViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="@{(view) -> itemViewModel.openItemDetails(view)}"
        android:padding="@dimen/large_padding"
        android:transitionName="item_layout">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:transitionName="item_image"
            app:itemImage="@{itemViewModel}"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_bill_color" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{itemViewModel.name}"
            android:textAppearance="@style/Text.ItemTitle"
            android:transitionName="item_title"
            app:layout_constraintLeft_toRightOf="@+id/item_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ensalada de guacamole, mozarella, tomate y pesto" />

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@color/text_secondary_dark"
            app:itemIcon="@{itemViewModel.icon}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/item_fork" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_padding"
            android:textAppearance="@style/Text.Secondary"
            android:text="@{itemViewModel.priceText}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/add_button"
            app:layout_constraintTop_toTopOf="@+id/add_button"
            tools:text="2,40â‚¬" />

        <ImageView
            android:id="@+id/add_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/large_padding"
            android:onClick="@{(view) -> itemViewModel.addPendingItemDirectly(view)}"
            android:tint="@color/text_secondary_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/item_image"
            app:srcCompat="@drawable/ic_add_white" />

    </android.support.constraint.ConstraintLayout>
</layout>