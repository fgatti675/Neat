<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="orderviewmodel"
            type="com.neat.viewmodel.PendingOrderViewModel" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:id="@+id/order_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        tools:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/tiny_padding"
        android:transitionName='@{orderviewmodel.id + "_view"}'>

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:transitionName='@{orderviewmodel.id + "_icon"}'
            app:itemIcon="@{orderviewmodel.icon}"
            tools:src="@drawable/item_fork" />

        <TextView
            android:id="@+id/order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tiny_padding"
            android:text='@{"x" + orderviewmodel.count}'
            android:textAppearance="@style/Text.Small.White"
            android:transitionName='@{orderviewmodel.id + "_count"}'
            android:visibility="@{orderviewmodel.count > 1 ? View.VISIBLE : View.GONE}"
            tools:text="x2"
            tools:visibility="visible" />

    </LinearLayout>
</layout>