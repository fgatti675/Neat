<resources>

    <!-- Base application theme. -->
    <style name="Neat" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/light_grey</item>

        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

    </style>

    <style name="Neat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="Neat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Button" parent="Widget.AppCompat.Button" />

    <style name="Button.Accent">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Button.Google">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorButtonNormal">@color/google_red</item>
    </style>

    <style name="Button.Facebook" >
        <item name="android:textColor">@color/white</item>
        <item name="android:colorButtonNormal">@color/facebook_blue</item>
    </style>

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
    </style>


    <style name="Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="Text.Caption" parent="TextAppearance.AppCompat.Caption" />

    <style name="Text.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Text.ItemTitle">
        <item name="android:textSize">16sp</item>
        <!--<item name="android:fontFamily">sans-serif-light</item>-->
    </style>

    <style name="Text.Mono">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Text.Caption.Mono">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Text.Title.Mono">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Text.Header.Mono">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Text.Small.Mono">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Text.Header" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="Text.Subhead" parent="TextAppearance.AppCompat.Subhead" />

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Caption.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Small.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Small.White.SemiTransparent">
        <item name="android:alpha">.8</item>
    </style>

    <style name="Text.White.SemiTransparent">
        <item name="android:alpha">.8</item>
    </style>

    <style name="Text.Title.Caps">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.Title.White">
        <!--<item name="android:fontFamily">sans-serif-light</item>-->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title.Caps.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title.White.Mono">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Text.Header.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Subhead.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Display" parent="TextAppearance.AppCompat.Display2">
    </style>

    <style name="Text.Display.Monospace" >
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Text.Display.Monospace.White" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="Tooltip">
        <item name="ttlm_backgroundColor">@color/colorAccentAlt</item>
        <item name="ttlm_padding">@dimen/larger_padding</item>
        <item name="android:textAppearance">@style/Text.White</item>
    </style>

</resources>
