<resources>

    <!-- Base application theme. -->
    <style name="Cahue" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/light_grey</item>

        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

    </style>

    <style name="Cahue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Cahue.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Button.Accent" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorAccent</item>
    </style>


    <style name="Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="Text.Caption" parent="TextAppearance.AppCompat.Caption" />

    <style name="Text.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Text.ItemTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.Title.Mono">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Text.Subtitle" parent="TextAppearance.AppCompat.Subhead" />

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Caption.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Small.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Small.White.SemiTransparent">
        <item name="android:alpha">.8</item>
    </style>

    <style name="Text.White.SemiTransparent">
        <item name="android:alpha">.8</item>
    </style>

    <style name="Text.Title.Caps">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.Title.White">
        <!--<item name="android:fontFamily">sans-serif-light</item>-->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title.Caps.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title.White.Mono">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Text.Subtitle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Header" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

</resources>
